      "mapa_navegacao": "02_MAPA_NAVEGACAO_OFICIAL.md"
    },
    "screen_specs": {
      "learner": 15,
      "creator_studio": 13,
      "platform_admin": 6,
      "total": 34
    },
    "component_inventory": {
      "catalogo": "catalogo_componentes.md",
