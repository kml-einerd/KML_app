      "estados": "estados_e_variantes.md"
    },
    "studio_variants": {
      "matriz": "matriz_edicoes.md",
      "regras": "regras_modularidade.md",
      "templates": "templates_micro_saas.md"
    },
    "sound_system": {
      "by_state": "mapa_som_por_estado.md",
      "by_action": "mapa_som_por_acao.md",
      "accessibility": "regras_acessibilidade.md"
    },
    "analytics": "taxonomia_eventos_por_tela.md",
    "qa_governance": {
      "gates": "gates_publicacao.md",
